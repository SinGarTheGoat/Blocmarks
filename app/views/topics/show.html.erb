<h1> You are in topic <%= @topic.title %> </h1>
<h3>and these are the associated bookmarks</h3>


<%= link_to "Add Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
<%= @topic.title %>
<% @topic.bookmarks.each do |bookmark| %>
  <%= bookmark.url %>
  <%= link_to "Delete bookmark", @bookmark, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
<% end %>
