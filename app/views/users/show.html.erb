<h1>My Blocmarks</h1>
<p>Find me in app/views/users/show.html.erb</p>

<div class=row>
    <h1>Blockmarks I have created
    </h1><br>
    <h3>
        <%y=1%>
        <% @bookmarks.each do |bookmark| %>
        <%=y%>)<%= link_to bookmark.url, bookmark.url%><br>
        <%y+=1%>
        <%= link_to "Edit bookmark", edit_topic_bookmark_path(bookmark.topic, bookmark), class: 'btn btn-primary btn-xs'%><br>
        <%= link_to "Delete bookmark", [bookmark.topic, bookmark], method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure you want to delete this bookmark?' } %><br>
        <%end%></h3>
</div>

<div>
    <%y=1%>
    <h1>Blockmarks I have liked</h1>
    <%@liked_bookmarks.each do |bookmark|%>
    <h3>
        <%=y%>)<%= link_to bookmark.url, bookmark.url%><br>
        <%y+=1%>
        <div>
            <% if like = current_user.liked(bookmark) %>
            <%= link_to [bookmark, like], class: 'btn btn-danger', method: :delete do %>
            <i class="glyphicon glyphicon-star-empty"></i>&nbsp; Unlike
            <% end %>
        <% else %>
            <%= link_to [bookmark, Like.new], class: 'btn btn-primary', method: :post do %>
            <i class="glyphicon glyphicon-star"></i>&nbsp; Like
            <% end %>
            <% end %>
        </div>

    <%end%>
    </h3>
</div>
